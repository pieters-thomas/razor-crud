@page
@model razor_crud.Pages.Spells.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-light">Edit</h1>

<h4 class="text-primary">Spell</h4>
<hr />
<div class="row">
    <div class="col-md-4 text-success">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Spell.ID" />
            <div class="form-group">
                <label asp-for="Spell.SpellName" class="control-label"></label>
                <input asp-for="Spell.SpellName" class="form-control" />
                <span asp-validation-for="Spell.SpellName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spell.SpellSlot" class="control-label"></label>
                <input asp-for="Spell.SpellSlot" class="form-control" />
                <span asp-validation-for="Spell.SpellSlot" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Spell.Concentration" /> @Html.DisplayNameFor(model => model.Spell.Concentration)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Spell.Components" class="control-label"></label>
                <input asp-for="Spell.Components" class="form-control" />
                <span asp-validation-for="Spell.Components" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
